# W&B Configuration (REQUIRED for tracking)
WANDB_API_KEY=your_wandb_api_key_here
WANDB_PROJECT=weavehacks-collaborative
# WANDB_ENTITY will use your default W&B entity

# LLM API Keys (At least one required for real execution)
OPENAI_API_KEY=your_openai_api_key_here

# For Anthropic: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=demo_mode_anthropic

# For Google: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=demo_mode_google

# OpenRouter API (for open-source models) - Optional
# Get from: https://openrouter.ai/keys
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Model Selection Strategy (QUALITY_FIRST, COST_FIRST, BALANCED, SPEED_FIRST, PRIVACY_FIRST)
DEFAULT_STRATEGY=BALANCED

# Demo Settings
DEMO_GENERATIONS=5
DEMO_TASKS_PER_TYPE=3

# Demo Mode Settings
DEMO_MODE=false
USE_SIMULATION=false

# =====================================
# SPONSOR INTEGRATIONS
# =====================================

# Tavily - AI Web Search
# Get key from: https://tavily.com
TAVILY_API_KEY=your_tavily_api_key_here

# BrowserBase - Web Automation
# Get from: https://browserbase.com
BROWSERBASE_API_KEY=demo_mode_browserbase
BROWSERBASE_PROJECT_ID=demo_project

# Mastra - Workflow Orchestration
# Get from: https://mastra.dev
MASTRA_API_KEY=demo_mode_mastra

# Daytona - Development Environments
# Get from: https://daytona.io
DAYTONA_API_URL=http://localhost:3000
DAYTONA_API_KEY=demo_mode_daytona
